// my comment

// Retrieve the database name from the command-line arguments
var dbName = (typeof db !== 'undefined') ? db.getName() : '';

// Connect to the specified database
var db = connect('mongodb://127.0.0.1:27017/' + dbName);

// Update all documents with name="Holberton school" to include the new attribute
var result = db.school.update(
    { name: "Holberton school" },
    { $set: { address: "972 Mission street" } },
    { multi: true }
);

// Print the result of the update operation
printjson(result);
